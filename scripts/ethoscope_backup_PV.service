[Unit]
description=Ethoscope node server
Wants=ntpd.service clock.service
After=ntpd.service clock.service


[Service]
Type=simple
WorkingDirectory=/opt/ethoscope-node/node_src/scripts/
ExecStart=/home/vibflysleep/anaconda3/envs/ethoscope3.7/bin/python /opt/ethoscope-node/node_src/scripts/backup_tool.py --regex ETHOSCOPE_PV_\\d{2} -r /ethoscope_results --server node
RestartSec=5
Restart=always

[Install]
WantedBy=multi-user.target

